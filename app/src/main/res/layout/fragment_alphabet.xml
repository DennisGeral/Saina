<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AlphabetFragment">

    <ImageView
        android:id="@+id/alphabetImg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/image_of_zimbabwe_sign_language_alphabet"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:src="@drawable/alphabet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="See Number Alphabet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alphabetImg" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Try it yourself"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alphabetImg" />


</androidx.constraintlayout.widget.ConstraintLayout>